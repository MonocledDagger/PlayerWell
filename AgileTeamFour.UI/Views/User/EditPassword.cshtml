@model AgileTeamFour.UI.ViewModels.EditPasswordVM

@{
    ViewData["Title"] = "Edit Password";
}

<h1>Edit Password</h1>

<h4>Change Password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="passwordForm" asp-action="EditPassword" method="post">
            <input type="hidden" asp-for="CurrentUser.UserID" />

            <div class="form-group">
                <label for="passwordOne" class="control-label">New Password</label>
                <input id="passwordOne" name="NewPassword" type="password" class="form-control" />
                <p id="passwordOneError" class="text-danger"></p>
            </div>

            <div class="form-group">
                <label for="passwordConfirm" class="control-label">Confirm New Password</label>
                <input id="passwordConfirm" name="ConfirmPassword" type="password" class="form-control" />
                <p id="passwordConfirmError" class="text-danger"></p>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('passwordForm').addEventListener('submit', function (event) {
            var passwordOne = document.getElementById('passwordOne').value;
            var passwordConfirm = document.getElementById('passwordConfirm').value;
            var isValid = true;

            if (!passwordOne) {
                document.getElementById('passwordOneError').innerText = 'Password cannot be empty';
                isValid = false;
            } else {
                document.getElementById('passwordOneError').innerText = '';
            }

            if (passwordOne !== passwordConfirm) {
                document.getElementById('passwordConfirmError').innerText = 'Passwords do not match';
                isValid = false;
            } else {
                document.getElementById('passwordConfirmError').innerText = '';
            }

            if (!isValid) {
                event.preventDefault();
            }
        });
    </script>
}
