@model AgileTeamFour.BL.Models.User
@{
    ViewData["Title"] = "Deactivate";
}

<h1>Deactivate</h1>

<h3>Are you sure you want to deactivate this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IconPic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IconPic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccessLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccessLevel)
        </dd>
    </dl>
    @{
        bool makeActive = false;
        string valueText = "Deactivate";
        if (@Model.AccessLevel.ToLower() == "deactivated")
        {
            makeActive = true;
            valueText = "Reactivate";
        }            
    }
    <form asp-action="Deactivate" asp-route-id="@Model.UserID" asp-route-makeactive=@makeActive>
        <input type="submit" value=@valueText class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
