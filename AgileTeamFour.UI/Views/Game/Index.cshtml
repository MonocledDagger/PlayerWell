@model IEnumerable<AgileTeamFour.BL.Models.Game>

@{
    ViewData["Title"] = "Games From Previous Events";
}
<div class="container">
    <h1 class="text-center">Games From Previous Events</h1>

 

    <p>
        <a class="btn btn-secondary" asp-area="" asp-controller="Game" asp-action="IndexCard">View Cards</a>
    </p> 

    <table class="table table-hover table-striped">
        <thead>
            <tr>
            
                <th class="gamename">
                    @Html.DisplayNameFor(model => model.GameName)
                </th>
                <th class="">
                    @Html.DisplayNameFor(model => model.Picture)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Platform)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
            
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        
    @foreach (var item in Model) {
            <tr>
            
                <td class="gamename">
                    <p class="fs-4 text-black">@Html.DisplayFor(modelItem => item.GameName)</p>
                </td>
                <td class="">
                        <img src="@item.Picture"
                             class="imagesmall"
                             alt="@item.Description"
                             onclick="on('@item.Picture')" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Platform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                    @if ((bool)TempData["IsAdmin"])
                    {
                        <td>
                            <a asp-action="Details" asp-route-id="@item.GameID" class="btn btn-primary btn">Details</a>|
                            <a asp-action="Edit" asp-route-id="@item.GameID" class="btn btn-secondary btn">Edit</a>|
                             
                            <a asp-action="Delete" asp-route-id="@item.GameID" class="btn btn-danger btn">Delete</a>
                        
                        </td>
                    }

                    @if ((bool)TempData["IsAdmin"] == false)
                    {
                        <td>
                            <a asp-action="Details" asp-route-id="@item.GameID" class="btn btn-primary btn"> See Details</a>
                        </td>
                    }

            </tr>
    }
        </tbody>
    </table>
</div>