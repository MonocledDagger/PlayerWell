@model IEnumerable<AgileTeamFour.BL.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1 class="text-center">Games</h1>

<p class="text-center">
    <a class="btn btn-primary btn-lg ml-3" asp-action="Create">Create New</a>
</p>
<p>
    <a class="btn btn-secondary" asp-area="" asp-controller="Game" asp-action="IndexCard">View Cards</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.GameID)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.GameID)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                    <img src="@item.Picture"
                         id="movieimage"
                         class="card-img-top"
                         alt="@item.Description"
                         onclick="on('@item.Picture')"
                         class="img-fluid" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.GameID" class="btn btn-primary btn-sm">Edit</a>|
                    <a asp-action="Details" asp-route-id="@item.GameID" class="btn btn-primary btn-sm">Details</a>|
                    <a asp-action="Delete" asp-route-id="@item.GameID" class="btn btn-primary btn-sm">Delete</a>
                
                
            </td>
        </tr>
}
    </tbody>
</table>
