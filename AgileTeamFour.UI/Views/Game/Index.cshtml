@model IEnumerable<AgileTeamFour.BL.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1 class="text-center">Games</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.GameID)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.GameName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.GameID)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.GameName)
            </td>
            <td>
                    <img src="~/images/Games/@item.Picture"
                         id="movieimage"
                         alt="@item.Description"
                         onclick="on('/images/Games/@item.Picture')"
                         class="img-fluid" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.GameID }) |
                @Html.ActionLink("Details", "Details", new { id=item.GameID  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.GameID  })
            </td>
        </tr>
}
    </tbody>
</table>
