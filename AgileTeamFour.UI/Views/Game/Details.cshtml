@model AgileTeamFour.BL.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@Model.GameName</h1>

<div>
    <hr />
    <dl class="row">
         
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Platform)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Platform)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        @* <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Picture)
        </dd> *@
        
            <dd class="col-sm-10">
                <img src="~/images/Games/@Model.Picture"
                     id="movieimage"
                     alt="@Model.Description"
                     onclick="on('/images/Games/@Model.Picture')"
                     class="img-fluid" />
            </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
    </dl>
</div>
<div class="mb-3">
    <a class="btn btn-primary btn-lg ml-3" asp-area="" asp-controller="Event" asp-action="EventsForGame" asp-route-gameID="@Model.GameID">View Events</a>
</div>
<div>
    <a class="btn btn-secondary btn-sm ml-3" asp-area="" asp-controller="Game" asp-action="Edit" asp-route-id="@Model.GameID">Edit</a>

    <a class="btn btn-secondary btn-sm" asp-action="Index">Back to List</a>
    

</div>



