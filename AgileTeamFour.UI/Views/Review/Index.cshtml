@model IEnumerable<AgileTeamFour.BL.Models.Review>

@{
    ViewData["Title"] = "Reviews";
}

<h1>Reviews</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Review</a>
</p>

<div class="review-list">
    @foreach (var item in Model)
    {
        <div class="review-card">
            <div class="review-header">
                <strong>@item.RecipientName</strong>
                <span class="review-stars">
                    @for (var i = 1; i <= 5; i++)
                    {
                        if (i <= item.StarsOutOf5)
                        {
                            <span class="fa fa-star checked"></span>
                        }
                        else
                        {
                            <span class="fa fa-star unchecked"></span>
                        }
                    }
                </span>
            </div>
            <div class="review-body">
                <p>@item.ReviewText</p>
            </div>
            <div class="review-footer">
                <small>Review by: @item.AuthorName on @item.DateTime.ToString("MMMM dd, yyyy")</small>
            </div>
            <div class="review-actions">
                @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ReviewID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })
            </div>
        </div>
    }
</div>





