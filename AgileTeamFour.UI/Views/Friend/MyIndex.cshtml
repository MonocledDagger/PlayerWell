@model IEnumerable<AgileTeamFour.UI.ViewModels.FriendVM>

@{
    ViewData["Title"] = "MyIndex";
}

<h1>My Friends</h1>

<p>
    <a class="btn btn-playerwell ml-3" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Users
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Friend.Status)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @foreach (var friend in item.MyFriends)
                    {
                        <span>@friend.UserName</span>

                        <br />
                    }
                </td>
                <td>
                    @item.Friend.Status
                </td>
            </tr>
        }
    </tbody>
</table>
