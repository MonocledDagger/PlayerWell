@model AgileTeamFour.UI.ViewModels.GuildVM

@{
    ViewData["Title"] = "Edit " + @Model.Guild.GuildName;
}

<h1>Edit</h1>
<br />
<h4>@Model.Guild.GuildName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Guild" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            
            <div class="form-group">
                <input asp-for="Guild.GuildId" type="hidden" />
                <span asp-validation-for="Guild.GuildId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Guild.GuildName" class="control-label"></label>
                <input asp-for="Guild.GuildName" class="form-control" />
                <span asp-validation-for="Guild.GuildName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Guild.Description" class="control-label"></label>
                <input asp-for="Guild.Description" class="form-control" />
                <span asp-validation-for="Guild.Description" class="text-danger"></span>
            </div>
            <br />
             @* <div class="form-group">
                <label asp-for="Guild.LeaderId" class="control-label"></label>
                <input asp-for="Guild.LeaderId" class="form-control" />
                <span asp-validation-for="Guild.LeaderId" class="text-danger"></span>
            </div>  *@
            <br />

            <div class="form-group">
                <label asp-for="Guild.LeaderId" class="control-label"></label>
                <select asp-for="Guild.LeaderId"
                        class="form-control"
                        multiple
                        asp-items="@(new MultiSelectList(Model.Users, "UserID", "UserName"))">
                </select>
                <span asp-validation-for="Guild.LeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
