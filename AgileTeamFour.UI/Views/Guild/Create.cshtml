@model AgileTeamFour.UI.ViewModels.GuildVM
@{
    ViewData["Title"] = "Create";
}
<div class="container shadow p-5 mb-5 ps-5 pb-5 rounded">
    <h1>Create Guild</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Guild" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group m-3">
                    <label asp-for="Guild.GuildName" class="control-label fs-5"></label>
                    <input asp-for="Guild.GuildName" class="form-control" />
                    <span asp-validation-for="Guild.GuildName" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <label asp-for="Guild.Description" class="control-label fs-5"></label>
                    <input asp-for="Guild.Description" class="form-control" />
                    <span asp-validation-for="Guild.Description" class="text-danger"></span>
                </div>
               
                <div class="form-group m-2">
                    <input type="submit" value="Create" class="btn btn-playerwell" />
                </div>
            </form>
        </div>
    </div>
 
    <div class="m-2">
        <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
